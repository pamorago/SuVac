@model ICollection<SuVac.Application.DTOs.SubastaListadoDTO>
@{
    ViewData["Title"] = "Subastas Finalizadas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">üî¥ Subastas Finalizadas</h2>
        <p class="text-muted small mb-0">Historial de subastas cerradas</p>
    </div>
    <a asp-action="Activas" class="btn btn-outline-success btn-sm">
        ‚Üê Subastas Activas
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No existen subastas finalizadas registradas.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Imagen</th>
                    <th>Ganado</th>
                    <th>Fecha de Inicio</th>
                    <th>Fecha de Cierre</th>
                    <th>Precio Base</th>
                    <th>Incremento M√≠nimo</th>
                    <th class="text-center">Pujas</th>
                    <th class="text-center">Estado Final</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var subasta in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(subasta.ImagenGanado))
                            {
                                <img src="@subasta.ImagenGanado"
                                     alt="Imagen de @subasta.NombreGanado"
                                     style="width:70px; height:55px; object-fit:cover; border-radius:6px;"
                                     onerror="this.src='/img/sin-imagen.png'" />
                            }
                            else
                            {
                                <div class="bg-light d-flex align-items-center justify-content-center"
                                     style="width:70px; height:55px; border-radius:6px;">
                                    <small class="text-muted">N/A</small>
                                </div>
                            }
                        </td>
                        <td class="fw-semibold">@subasta.NombreGanado</td>
                        <td>@subasta.FechaInicio.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@subasta.FechaFin.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>‚Ç°@subasta.PrecioBase.ToString("N2")</td>
                        <td>‚Ç°@subasta.IncrementoMinimo.ToString("N2")</td>
                        <td class="text-center">
                            <span class="badge bg-primary rounded-pill">@subasta.CantidadPujas</span>
                        </td>
                        <td class="text-center">
                            @{
                                var badgeClass = subasta.EstadoSubasta == "Finalizada" ? "bg-secondary" : "bg-danger";
                            }
                            <span class="badge @badgeClass">@subasta.EstadoSubasta</span>
                        </td>
                        <td>
                            <div class="d-flex gap-1">
                                <a asp-action="Detalle" asp-route-id="@subasta.SubastaId"
                                   class="btn btn-outline-dark btn-sm">Detalle</a>
                                <a asp-action="HistorialPujas" asp-route-id="@subasta.SubastaId"
                                   class="btn btn-outline-primary btn-sm">Pujas</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
