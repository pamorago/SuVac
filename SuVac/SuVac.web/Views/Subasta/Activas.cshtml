@model ICollection<SuVac.Application.DTOs.SubastaListadoDTO>
@{
    ViewData["Title"] = "Subastas Activas";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <div>
        <h2 class="mb-0">ðŸŸ¢ Subastas Activas</h2>
        <p class="text-muted small mb-0">Subastas en curso disponibles para pujar</p>
    </div>
    <a asp-action="Finalizadas" class="btn btn-outline-secondary btn-sm">
        Ver Finalizadas â†’
    </a>
</div>

@if (!Model.Any())
{
    <div class="alert alert-info">
        No hay subastas activas en este momento.
    </div>
}
else
{
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        @foreach (var subasta in Model)
        {
            <div class="col">
                <div class="card h-100 shadow-sm border-success">
                    @if (!string.IsNullOrEmpty(subasta.ImagenGanado))
                    {
                        <img src="@subasta.ImagenGanado" class="card-img-top"
                             alt="Imagen de @subasta.NombreGanado"
                             style="height:200px; object-fit:cover;"
                             onerror="this.src='/img/sin-imagen.png'" />
                    }
                    else
                    {
                        <div class="card-img-top bg-light d-flex align-items-center justify-content-center"
                             style="height:200px;">
                            <span class="text-muted">Sin imagen</span>
                        </div>
                    }
                    <div class="card-body">
                        <h5 class="card-title fw-bold">@subasta.NombreGanado</h5>
                        <span class="badge bg-success mb-2">@subasta.EstadoSubasta</span>

                        <ul class="list-unstyled small mb-2">
                            <li><strong>Inicio:</strong> @subasta.FechaInicio.ToString("dd/MM/yyyy HH:mm")</li>
                            <li><strong>Cierre:</strong> @subasta.FechaFin.ToString("dd/MM/yyyy HH:mm")</li>
                            <li><strong>Precio base:</strong> â‚¡@subasta.PrecioBase.ToString("N2")</li>
                            <li><strong>Incremento mÃ­nimo:</strong> â‚¡@subasta.IncrementoMinimo.ToString("N2")</li>
                            <li>
                                <strong>Cantidad de pujas:</strong>
                                <span class="badge bg-primary">@subasta.CantidadPujas</span>
                            </li>
                        </ul>
                    </div>
                    <div class="card-footer d-flex gap-2">
                        <a asp-action="Detalle" asp-route-id="@subasta.SubastaId"
                           class="btn btn-primary btn-sm flex-fill">
                            Ver Detalle
                        </a>
                        <a asp-action="HistorialPujas" asp-route-id="@subasta.SubastaId"
                           class="btn btn-outline-primary btn-sm flex-fill">
                            Historial de Pujas
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
}
