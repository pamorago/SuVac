@model SuVac.Application.DTOs.SubastaDTO

@{
    ViewData["Title"] = "Eliminar Subasta";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Eliminar Subasta</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Volver
    </a>
</div>

<div class="alert alert-danger d-flex align-items-center mb-3" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    <div>¿Estás seguro de que querés eliminar esta subasta? Esta acción no se puede deshacer.</div>
</div>

<div class="card shadow-sm mb-3">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">ID</dt>
            <dd class="col-sm-9">@Model.SubastaId</dd>

            <dt class="col-sm-3">Ganado (ID)</dt>
            <dd class="col-sm-9">@Model.GanadoId</dd>

            <dt class="col-sm-3">Precio Base</dt>
            <dd class="col-sm-9">$@Model.PrecioBase.ToString("F2")</dd>

            <dt class="col-sm-3">Incremento Mínimo</dt>
            <dd class="col-sm-9">$@Model.IncrementoMinimo.ToString("F2")</dd>

            <dt class="col-sm-3">Estado (ID)</dt>
            <dd class="col-sm-9">@Model.EstadoSubastaId</dd>

            <dt class="col-sm-3">Fecha Inicio</dt>
            <dd class="col-sm-9">@Model.FechaInicio.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Fecha Fin</dt>
            <dd class="col-sm-9">@Model.FechaFin.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
    </div>
</div>

<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="SubastaId" />
    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-danger">
            <i class="bi bi-trash me-1"></i>Sí, eliminar
        </button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>