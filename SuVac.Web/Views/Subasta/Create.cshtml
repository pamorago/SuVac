@model SuVac.Application.DTOs.SubastaDTO

@{
    ViewData["Title"] = "Nueva Subasta";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="h3 mb-0">Nueva Subasta</h1>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left me-1"></i>Volver
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="GanadoId" class="form-label"></label>
                <input asp-for="GanadoId" class="form-control" />
                <span asp-validation-for="GanadoId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PrecioBase" class="form-label"></label>
                <input asp-for="PrecioBase" class="form-control" />
                <span asp-validation-for="PrecioBase" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="IncrementoMinimo" class="form-label"></label>
                <input asp-for="IncrementoMinimo" class="form-control" />
                <span asp-validation-for="IncrementoMinimo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="EstadoSubastaId" class="form-label"></label>
                <input asp-for="EstadoSubastaId" class="form-control" />
                <span asp-validation-for="EstadoSubastaId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="UsuarioCreadorId" class="form-label"></label>
                <input asp-for="UsuarioCreadorId" class="form-control" />
                <span asp-validation-for="UsuarioCreadorId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaInicio" class="form-label"></label>
                <input asp-for="FechaInicio" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="FechaFin" class="form-label"></label>
                <input asp-for="FechaFin" class="form-control" type="datetime-local" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save me-1"></i>Guardar
                </button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}