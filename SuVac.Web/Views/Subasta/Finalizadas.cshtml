@model IEnumerable<SuVac.Application.DTOs.SubastaListadoDTO>
@{
    ViewData["Title"] = "Subastas Finalizadas";
    var total = Model?.Count() ?? 0;
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Subastas Finalizadas</h1>
        <p class="text-muted mb-0">Historial de subastas cerradas y canceladas. Total: <strong>@total</strong>.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Activas" class="btn btn-outline-success">
            <i class="bi bi-arrow-left me-1"></i> Ver Activas
        </a>
        <a asp-action="Create" asp-route-from="finalizadas" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Nueva Subasta
        </a>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        <div>No hay subastas finalizadas en este momento.</div>
    </div>
}
else
{
    <section aria-label="Listado de subastas finalizadas">
        <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 g-4">
            @foreach (var subasta in Model)
            {
                <div class="col">
                    <article class="card h-100 shadow-sm border-0">
                        <div class="rounded-top overflow-hidden bg-body-tertiary" style="height: 200px;">
                            @if (!string.IsNullOrEmpty(subasta.ImagenGanado))
                            {
                                <img class="w-100 h-100 object-fit-cover rounded-top"
                                     src="@subasta.ImagenGanado"
                                     alt="Imagen de @subasta.NombreGanado"
                                     loading="lazy"
                                     onerror="this.src='/img/sin-imagen.png'" />
                            }
                            else
                            {
                                <div class="d-flex flex-column justify-content-center align-items-center text-muted h-100">
                                    <i class="bi bi-image fs-1"></i>
                                    <span class="small">Sin imagen</span>
                                </div>
                            }
                        </div>

                        <div class="card-body">
                            <h2 class="h6 fw-semibold mb-2">@subasta.NombreGanado</h2>

                            <div class="d-flex flex-wrap gap-2 align-items-center mb-3">
                                @{
                                    var badgeClass = subasta.EstadoSubasta == "Finalizada" ? "text-bg-secondary" : "text-bg-danger";
                                }
                                <span class="badge @badgeClass">
                                    <i class="bi bi-circle-fill me-1"></i>@subasta.EstadoSubasta
                                </span>
                                <span class="badge text-bg-primary">
                                    <i class="bi bi-hammer me-1"></i>@subasta.CantidadPujas puja(s)
                                </span>
                            </div>

                            <dl class="row small mb-0">
                                <dt class="col-5 text-muted">Cierre</dt>
                                <dd class="col-7">@subasta.FechaFin.ToString("dd/MM/yyyy HH:mm")</dd>
                                <dt class="col-5 text-muted">Precio base</dt>
                                <dd class="col-7 fw-semibold">@subasta.PrecioBase.ToString("N2")</dd>
                            </dl>
                        </div>

                        <div class="card-footer bg-body border-0 pt-0 pb-3">
                            <div class="d-grid gap-2 px-2">
                                <a asp-action="Detalle" asp-route-id="@subasta.SubastaId"
                                   class="btn btn-secondary">
                                    <i class="bi bi-eye me-1"></i> Ver detalle
                                </a>
                                <a asp-action="HistorialPujas" asp-route-id="@subasta.SubastaId"
                                   class="btn btn-outline-primary">
                                    <i class="bi bi-list-ul me-1"></i> Historial de pujas
                                </a>
                                <div class="d-flex gap-2">
                                    <a asp-action="Edit" asp-route-id="@subasta.SubastaId" asp-route-from="finalizadas"
                                       class="btn btn-outline-warning flex-fill">
                                        <i class="bi bi-pencil me-1"></i> Editar
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@subasta.SubastaId" asp-route-from="finalizadas"
                                       class="btn btn-outline-danger flex-fill">
                                        <i class="bi bi-trash me-1"></i> Eliminar
                                    </a>
                                </div>
                            </div>
                        </div>
                    </article>
                </div>
            }
        </div>
    </section>
}

@section Scripts {
    <style>
        .card:hover { transform: translateY(-3px); transition: transform .18s ease; }
    </style>
}

