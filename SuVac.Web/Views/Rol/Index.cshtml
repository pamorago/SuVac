@model ICollection<SuVac.Application.DTOs.RolDTO>
@{
    ViewData["Title"] = "Roles";
}
<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6"><h1>@ViewData["Title"]</h1></div>
        <div class="col-md-6 text-end"><a asp-action="Create" class="btn btn-primary">Crear Nuevo</a></div>
    </div>
    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr><th>ID</th><th>Nombre</th><th>Acciones</th></tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RolId</td>
                        <td>@item.Nombre</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.RolId" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.RolId" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.RolId" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">No hay roles registrados.</div>
    }
</div>
