@model SuVac.Application.DTOs.CategoriaDTO

@{
    ViewData["Title"] = "Eliminar Categoría";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1>@ViewData["Title"]</h1>
            <div class="alert alert-warning" role="alert">
                <strong>¿Está seguro de que desea eliminar esta categoría?</strong>
            </div>
            <div class="card">
                <div class="card-body">
                    <div class="mb-3">
                        <label class="form-label"><strong>ID:</strong></label>
                        <p>@Model.CategoriaId</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label"><strong>Nombre:</strong></label>
                        <p>@Model.Nombre</p>
                    </div>
                    <div class="mb-3">
                        <label class="form-label"><strong>Descripción:</strong></label>
                        <p>@Model.Descripcion</p>
                    </div>
                </div>
            </div>
            <form asp-action="DeleteConfirmed" asp-route-id="@Model.CategoriaId" method="post" class="mt-3">
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </form>
        </div>
    </div>
</div>
