@model SuVac.Application.DTOs.GanadoDTO

@{
    ViewData["Title"] = "Detalles del Ganado - " + Model.Nombre;
}

<div class="container mt-5 mb-5">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 mb-1">@Model.Nombre</h1>
                    <p class="text-muted mb-0">Detalles completos del ganado</p>
                </div>
                @{
                    var headerBadgeClass = Model.NombreEstadoGanado == "Activo" ? "bg-success" : "bg-danger";
                }
                <span class="badge @headerBadgeClass bg-lg p-2">@(Model.NombreEstadoGanado ?? "Sin estado")</span>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Información General</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-4">
                        <div class="col-md-6 mb-3">
                            <p><strong class="text-muted">ID del Ganado:</strong></p>
                            <p class="h6 text-primary">@Model.GanadoId</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p><strong class="text-muted">Peso:</strong></p>
                            <p class="h6 text-success">@Model.PesoKg kg</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p><strong class="text-muted">Tipo de Ganado:</strong></p>
                            <p class="h6">@Model.NombreTipoGanado</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p><strong class="text-muted">Raza:</strong></p>
                            <p class="h6">@Model.NombreRaza</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p><strong class="text-muted">Sexo:</strong></p>
                            <p class="h6">@Model.NombreSexo</p>
                        </div>
                        <div class="col-md-6 mb-3">
                            <p><strong class="text-muted">Fecha de Nacimiento:</strong></p>
                            <p class="h6">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Descripción</h5>
                </div>
                <div class="card-body">
                    <p class="lead">@Model.Descripcion</p>
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Categorías Asociadas</h5>
                </div>
                <div class="card-body">
                    @if (Model.Categorias != null && Model.Categorias.Any())
                    {
                        <div class="d-flex flex-wrap gap-2">
                            @foreach (var cat in Model.Categorias)
                            {
                                <span class="badge bg-info text-dark fs-6 px-3 py-2">@cat</span>
                            }
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mb-0">No hay categorías asignadas a este ganado.</p>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0">Imágenes del Ganado</h5>
                </div>
                <div class="card-body">
                    @if (Model.ImagenesGanado != null && Model.ImagenesGanado.Any())
                    {
                        <div class="row g-3">
                            @foreach (var imagen in Model.ImagenesGanado)
                            {
                                <div class="col-md-6 col-lg-4">
                                    <div class="border rounded bg-light d-flex align-items-center justify-content-center"
                                         style="height: 280px;">
                                        <img src="@imagen.UrlImagen" alt="Imagen del ganado @Model.Nombre"
                                             style="max-width: 100%; max-height: 100%; object-fit: contain;">
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning" role="alert">
                            <i class="bi bi-exclamation-triangle me-2"></i>
                            No hay imágenes disponibles para este ganado.
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm border-0 mb-4">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">Información de Registro</h5>
                </div>
                <div class="card-body text-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <p><strong class="text-muted">Condición (Certificado de Salud):</strong></p>
                            <p class="h6">
                                @if (!string.IsNullOrEmpty(Model.CertificadoSalud))
                                {
                                    <span class="badge bg-success"><i class="bi bi-patch-check me-1"></i>Certificado y
                                        apto</span>
                                        <br />

                                        <small class="text-muted mt-1 d-inline-block">@Model.CertificadoSalud</small>
                                    }
                                else
                                    {
                                        <span class="badge bg-warning text-dark"><i
                                            class="bi bi-exclamation-triangle me-1"></i>Sin certificación</span>
                                        }
                                    </p>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <p><strong class="text-muted">Estado:</strong></p>
                                    <p class="h6">
                                        @if (Model.NombreEstadoGanado == "Activo")
                                        {
                                            <span class="badge bg-success">@Model.NombreEstadoGanado</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@(Model.NombreEstadoGanado ?? "No definido")</span>
                                        }
                                    </p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong class="text-muted">Fecha de Registro:</strong></p>
                                    <p class="h6">@Model.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</p>
                                </div>
                                <div class="col-md-6">
                                    <p><strong class="text-muted">Nombre Vendedor:</strong></p>
                                    <p class="h6">@Model.NombreVendedor</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card shadow-sm border-0 mb-4">
                        <div class="card-header bg-dark text-white">
                            <h5 class="mb-0"><i class="bi bi-gavel me-1"></i> Historial de Subastas</h5>
                        </div>
                        <div class="card-body p-0">
                            @if (Model.SubastasParticipacion != null && Model.SubastasParticipacion.Any())
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover align-middle mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>ID Subasta</th>
                                                <th>Fecha de Inicio</th>
                                                <th>Fecha de Cierre</th>
                                                <th>Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var sub in Model.SubastasParticipacion)
                                            {
                                                <tr>
                                                    <td>
                                                        @if (sub.EstadoSubasta == "Activa" || sub.EstadoSubasta == "Programada" ||
                                                                                                                                                                                                                sub.EstadoSubasta == "Finalizada")
                                                        {
                                                            <a asp-controller="Subasta" asp-action="Detalle" asp-route-id="@sub.SubastaId"
                                                                   asp-route-from="ganado" class="text-decoration-none">
                                                                <span class="badge bg-secondary">#@sub.SubastaId</span>
                                                                <i class="bi bi-box-arrow-up-right small"></i>
                                                            </a>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-secondary">#@sub.SubastaId</span>
                                                        }
                                                    </td>
                                                    <td>@sub.FechaInicio.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>@sub.FechaFin.ToString("dd/MM/yyyy HH:mm")</td>
                                                    <td>
                                                        @{
                                                            var estadoBadge = sub.EstadoSubasta switch
                                                            {
                                                                "Activa" => "bg-success",
                                                                "Finalizada" => "bg-secondary",
                                                                "Cancelada" => "bg-danger",
                                                                "Programada" => "bg-warning text-dark",
                                                                _ => "bg-info"
                                                            };
                                                        }
                                                        <span class="badge @estadoBadge">@sub.EstadoSubasta</span>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted mb-0 p-3">Este ganado no ha participado en ninguna subasta.</p>
                            }
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-start">
                        <a asp-controller="Ganado" asp-action="Edit" asp-route-id="@Model.GanadoId" class="btn btn-warning">
                            <i class="bi bi-pencil me-2"></i>Editar
                        </a>
                        <a asp-controller="Ganado" asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Volver al Catálogo
                        </a>
                    </div>
                </div>
            </div>
        </div>