@model IEnumerable<SuVac.Application.DTOs.GanadoDTO>

@{
    ViewData["Title"] = "Catálogo de Ganado";
    var total = Model?.Count() ?? 0;
}

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Catálogo de Ganado</h1>
        <p class="text-muted mb-0">Explora el catálogo disponible. Total: <strong>@total</strong>.</p>
    </div>

    <div class="d-flex gap-2">
        <a asp-controller="Ganado" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i> Agregar Ganado
        </a>
    </div>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-info d-flex align-items-center" role="alert">
        <i class="bi bi-info-circle me-2"></i>
        <div>No hay ganado disponible en este momento.</div>
    </div>
}
else
{
    <div class="row g-4">
        @foreach (var item in Model)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm h-100 border-0">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">@item.Nombre</h5>
                    </div>
                    <div class="card-body">
                        <p class="mb-2">
                            <strong>ID:</strong> <span class="badge bg-secondary">@item.GanadoId</span>
                        </p>
                        <p class="mb-2">
                            <strong>Peso:</strong> <span class="text-success">@item.PesoKg kg</span>
                        </p>
                        <p class="mb-2">
                            <strong>Tipo:</strong> @item.NombreTipoGanado
                        </p>
                        <p class="mb-2">
                            <strong>Raza:</strong> @item.NombreRaza
                        </p>
                        <p class="mb-3 text-muted small">
                            <strong>Sexo:</strong> @item.NombreSexo
                        </p>
                        <p class="card-text small">
                            @(item.Descripcion?.Substring(0, Math.Min(80, item.Descripcion?.Length ?? 0)) ?? "...")
                        </p>
                    </div>
                    <div class="card-footer bg-light">
                        <div class="d-flex gap-2">
                            <a asp-controller="Ganado" asp-action="Details" asp-route-id="@item.GanadoId"
                                   class="btn btn-sm btn-primary flex-grow-1">
                                <i class="bi bi-eye me-1"></i>Ver Detalles
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}