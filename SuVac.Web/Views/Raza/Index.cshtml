@model ICollection<SuVac.Application.DTOs.RazaDTO>

@{
    ViewData["Title"] = "Razas";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-6">
            <h1>@ViewData["Title"]</h1>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary">Crear Nueva Raza</a>
        </div>
    </div>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripci√≥n</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.RazaId</td>
                        <td>@item.Nombre</td>
                        <td>@item.Descripcion</td>
                        <td>
                            <a asp-action="Details" asp-route-id="@item.RazaId" class="btn btn-info btn-sm">Detalles</a>
                            <a asp-action="Edit" asp-route-id="@item.RazaId" class="btn btn-warning btn-sm">Editar</a>
                            <a asp-action="Delete" asp-route-id="@item.RazaId" class="btn btn-danger btn-sm">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info" role="alert">
            No hay razas registradas.
        </div>
    }
</div>
