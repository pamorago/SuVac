@model IEnumerable<SuVac.Application.DTOs.UsuarioDTO>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<div class="container mt-5">
    <h1 class="mb-4">
        <i class="bi bi-people"></i> Usuarios del Sistema
    </h1>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            No hay usuarios registrados en el sistema.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Nombre Completo</th>
                        <th>Rol</th>
                        <th>Estado</th>
                        <th>Fecha de Registro</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var usuario in Model)
                    {
                        <tr class="@(usuario.NombreRol == "Administrador" ? "table-danger" : "")">
                            <td>
                                <strong>@usuario.NombreCompleto</strong>
                            </td>
                            <td>
                                @if (usuario.NombreRol == "Administrador")
                                {
                                    <span class="badge bg-danger">@usuario.NombreRol</span>
                                }
                                else if (usuario.NombreRol == "Vendedor")
                                {
                                    <span class="badge bg-warning text-dark">@usuario.NombreRol</span>
                                }
                                else
                                {
                                    <span class="badge bg-info">@usuario.NombreRol</span>
                                }
                            </td>
                            <td>
                                @if (usuario.NombreEstado == "Activo")
                                {
                                    <span class="badge bg-success">@usuario.NombreEstado</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@usuario.NombreEstado</span>
                                }
                            </td>
                            <td>@usuario.FechaRegistro.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>
                                <a asp-controller="Usuario" asp-action="Details" asp-route-id="@usuario.UsuarioId"
                                       class="btn btn-sm btn-primary" title="Ver detalles">
                                    <i class="bi bi-eye"></i> Detalles
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>

<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
    }
</style>