@model SuVac.Application.DTOs.PujaDTO

@{
    ViewData["Title"] = "Detalle de Puja";
}

<nav class="mb-3">
    <ol class="breadcrumb mb-0">
        <li class="breadcrumb-item">
            <a asp-action="Index" class="text-decoration-none">Mis Pujas</a>
        </li>
        <li class="breadcrumb-item active" aria-current="page">Detalle</li>
    </ol>
</nav>

<div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center gap-2 mb-3">
    <div>
        <h1 class="h3 mb-1">Detalle de Puja</h1>
        <p class="text-muted mb-0">Informaci√≥n completa de la puja seleccionada.</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i> Volver al listado
        </a>
    </div>
</div>

<article class="card shadow-sm border-0">
    <div class="card-body p-4">

        <header class="mb-3">
            <div class="d-flex flex-wrap gap-2 align-items-center">
                <span class="badge text-bg-light border">
                    <i class="bi bi-hash me-1"></i>Puja #@Model.PujaId
                </span>
                <span class="badge text-bg-primary">
                    <i class="bi bi-cash-coin me-1"></i>&#8353;@Model.Monto.ToString("N2")
                </span>
            </div>
        </header>

        <hr class="my-3" />

        <dl class="row mb-0">
            <dt class="col-12 col-md-3 text-muted">Usuario</dt>
            <dd class="col-12 col-md-9 fw-semibold">@Model.NombreUsuario</dd>

            <dt class="col-12 col-md-3 text-muted">Subasta</dt>
            <dd class="col-12 col-md-9">
                <a asp-controller="Subasta" asp-action="Detalle" asp-route-id="@Model.SubastaId"
                       class="text-decoration-none">
                    Subasta #@Model.SubastaId <i class="bi bi-box-arrow-up-right small"></i>
                </a>
            </dd>

            <dt class="col-12 col-md-3 text-muted">Monto ofertado</dt>
            <dd class="col-12 col-md-9">&#8353;@Model.Monto.ToString("N2")</dd>

            <dt class="col-12 col-md-3 text-muted">Fecha y hora</dt>
            <dd class="col-12 col-md-9">@Model.FechaHora.ToString("dd/MM/yyyy HH:mm:ss")</dd>
        </dl>

        <hr class="my-4" />

        <div class="d-flex flex-column flex-sm-row gap-2 justify-content-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i> Regresar al listado
            </a>
        </div>

    </div>
</article>